{
    "compilerOptions": {
        "module": "CommonJS",
        "esModuleInterop": true,
        "target": "ES2020",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "resolveJsonModule": true,
        "baseUrl": ".",
        "skipLibCheck": true,
        "paths": {
            "*": ["node_modules/*"]
        }
    },
    "include": [
        "functions/**/*",
        "constants/**/*",
        "generated/**/*",
        "./env.d.ts"
, "index.ts"    ]
}